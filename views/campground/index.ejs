<%-include ("../partials/header")%>
<div class="container">
    <header class="jumbotron">
        <div class="container">
        <h1 class=" mb-3">
            Welcome to CampLife!
        </h1>
        <p style="font-weight:150; font-size:20px; margin-bottom:5px;">View our Handpicked campgrounds...</p>
        <a href="/campgrounds/new" class="btn btn-outline-primary mt-3 mr-2 btn-lg">Add Campground</a>
        <!-- <a href="/landing" class="btn btn-primary mt-3 btn-lg">Go back</a> -->
        <form action="/campgrounds" method='GET' class='mt-3 form-inline' style='float:right'>
            <div class='form-group'>
                <input class='form-control' type="text" placeholder="search..." name="search">
                <button class='btn btn-info ml-2'>search</button>
            </div>
        </form>
    </div>
    </header>
    
<div class="row text-center">
    <%campgrounds.forEach(function(camps){%> <!-- camps is each obj in databse-->
        <div class="col-md-6 col-lg-3">
            <div class="card mb-3">
                <img class="card-img-top" src="<%=camps.image%>" alt="Not Working">
                <div class="card-body">
                    <h4 class="card-title"><%=camps.name%></h4>
                    <a href="/campgrounds/<%=camps._id%>" class="btn btn-primary">More Info</a>
                </div>
            </div>
        </div>
    <%})%>
</div>

