<%-include ("../partials/header")%>
<div class="container">
    <h1 class="text-center mt-5">Edit Campground</h1>
    <div class="mt-5" style="width:30%; margin:0 auto;">
        <form action="/campgrounds/<%=campgroundId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
            <div class="form-group"><input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]" required></div>
            <div class="form-group"><button class="btn btn-lg btn-success btn-block">Submit</button></div>
        </form>
        <a href="/campgrounds/<%=campgroundId%>">Go back!!</a>
    </div>
</div>
<%-include ("../partials/footer")%>